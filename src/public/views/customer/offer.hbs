<section class="order light-section">
    <div class="container mx-auto pt-12">
        <h1 class="text-lg font-bold mb-4">All orders</h1>
        {{#if messages.success}}
        <div id='success-alert'
            class="flex item-center bg-green-500 text-white text-sm font-bold px-4 py-3 rounded-2xl mb-4" role="alert">
            <p>{{messages.success}}</p>
        </div>
        {{/if}}

        {{#if order.length}}

        <table class="w-full bg-white table-auto shadow">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Order</th>
                    <th class="px-4 py-2 text-left">Name </th>
                    <th class="px-4 py-2 text-left">Role </th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Rate offered</th>
                    <th class="px-4 py-2 text-left">Date</th>
                    <th class="px-4 py-2 text-left">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each order}}
                <tr>
                    <td class="border px-4 py-2 text-sm font-bold"><a href="#" class="link">{{_id}}</a></td>
                    <td class="border px-4 py-2 text-sm font-bold capitalize">{{spId.name}}</td>
                    <td class="border px-4 py-2 text-sm font-bold capitalize">{{spId.profile.role}}</td>
                    <td class="border px-4 py-2 text-sm font-bold capitalize">{{spId.profile.phone}}</td>
                    <td class="border px-4 py-2 text-sm font-bold">â‚¹ {{offerRate}} /hour</td>
                    <td class="border px-4 py-2 text-sm font-bold">{{dateFormat createdAt "h:mm a , DD MMMM YYYY"}}</td>
                    <td class="border px-4 py-2 text-sm font-bold capitalize">{{status}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <div class="noOrder text-center mt-20">
            <h1 class=" text-6xl font-bold"><i>No order found</i></h1>
        </div>
        {{/if}}
    </div>
</section>